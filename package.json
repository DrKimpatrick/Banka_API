{
  "name": "banka_api",
  "version": "1.0.0",
  "description": "A light-weight core banking application that powers banking operations. ",
  "main": "index.js",
  "scripts": {
    "start": "NODE_ENV=development node index.js",
    "dev": "nodemon index.js",
    "drop": "node ./models/db tearDown",
    "test": "NODE_ENV=testing npm run drop && NODE_ENV=testing npm run create &&  NODE_ENV=testing nyc --reporter=html --reporter=text mocha test/**/*.js --exit",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "lint": "node_modules/.bin/eslint --fix index.js controllers api-routes middleware",
    "pre-commit": "npm run lint",
    "pre-push": "npm run lint",
    "create": "node ./models/db createTables"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint",
      "pre-push": "npm run lint"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/DrKimpatrick/Banka_API.git"
  },
  "author": "dr.kimpatrick",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/DrKimpatrick/Banka_API/issues"
  },
  "homepage": "https://github.com/DrKimpatrick/Banka_API#readme",
  "devDependencies": {
    "chai": "^4.2.0",
    "coveralls": "^3.0.2",
    "eslint": "^5.16.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.16.0",
    "husky": "^1.3.1",
    "mocha-lcov-reporter": "^1.3.0",
    "npm-run-all": "^4.1.5",
    "nyc": "^13.3.0",
    "request": "^2.88.0",
    "nodemon": "^1.18.11"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.18.3",
    "chai-http": "^4.2.1",
    "dotenv": "^7.0.0",
    "express": "^4.16.4",
    "istanbul": "^0.4.5",
    "jsonwebtoken": "^8.5.1",
    "make-runnable": "^1.3.6",
    "mocha": "^6.0.2",
    "pg": "^7.10.0"
  },
  "engines": {
    "node": "11.12.0"
  }
}
